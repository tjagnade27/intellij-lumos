<idea-plugin>
    <id>com.lumos.intellij</id>
    <name>LUMOS</name>
    <vendor email="rz1989s@gmail.com" url="https://lumos-lang.org">LUMOS Language</vendor>

    <!-- Product and plugin compatibility requirements -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.redhat.devtools.lsp4ij</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- File type registration -->
        <fileType
            name="LUMOS"
            implementationClass="com.lumos.LumosFileType"
            fieldName="INSTANCE"
            language="LUMOS"
            extensions="lumos"/>

        <!-- Language registration -->
        <lang.parserDefinition
            language="LUMOS"
            implementationClass="com.lumos.LumosParserDefinition"/>

        <!-- Syntax highlighting -->
        <lang.syntaxHighlighterFactory
            language="LUMOS"
            implementationClass="com.lumos.LumosSyntaxHighlighterFactory"/>

        <!-- Color settings page -->
        <colorSettingsPage
            implementation="com.lumos.LumosColorSettingsPage"/>
    </extensions>

    <extensions defaultExtensionNs="com.redhat.devtools.lsp4ij">
        <!-- LSP server registration -->
        <server
            id="lumosLanguageServer"
            name="LUMOS Language Server"
            factoryClass="com.lumos.LumosLanguageServerFactory">
            <description>
                LUMOS Language Server provides syntax validation, auto-completion, hover documentation, and code formatting for .lumos files.
            </description>
        </server>

        <!-- Language mapping -->
        <languageMapping
            language="LUMOS"
            serverId="lumosLanguageServer"/>
    </extensions>
</idea-plugin>
